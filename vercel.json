{
  "name": "API-Sendmail",
  "version": "1.0.0",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc"
  },
  "routes": [
    {
      "src": "/send-email",
      "dest": "src/routes/email.js"
    },
    {
      "src": "/(.*)",
      "dest": "src/app.js"
    }
  ],
  "dependencies": {
    "express": "^4.17.1",
    "@types/express": "^4.17.11",
    "typescript": "^4.4.4",
    "@sendgrid/mail": "^7.7.0"
  }
}
